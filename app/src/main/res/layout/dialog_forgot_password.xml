<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_constrain_layout_8dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tex_input_email_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_margin="@dimen/margin_text_input_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:passwordToggleTint="@color/orange_input_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_email_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/orange_input_edit_text"
            android:drawableStart="@drawable/ic_email"
            android:hint="@string/email"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_16dp"
        android:layout_marginTop="@dimen/margin_top_8dp_button"
        android:text="@string/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_cancel"
        app:layout_constraintTop_toBottomOf="@id/tex_input_email_confirm" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_8dp_button"
        android:layout_marginEnd="@dimen/margin_end_16dp"
        android:text="@string/cancel"
        app:layout_constraintEnd_toStartOf="@id/button_ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tex_input_email_confirm" />
</androidx.constraintlayout.widget.ConstraintLayout>